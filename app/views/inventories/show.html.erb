                <p class="title">Stock</p>
                <span class="atomic-mass"><%= @inventory.quantity %></span>
              </div>             
            </div>
            
            <div class="element-card">
              <div class="front-facing">
              <i class="  ti-layout-column2 abr"></i>
                <p class="title">Previstos</p>
               
                <span class="atomic-mass"><%= @inventory.quantity %></span>
              </div>
              
            </div>
