               <div class="panel-body fixed-table-body ">
                 
                 <div class="white-box">
                  <div class="table-responsive">
                    <table class="table product-overview ">
                        <thead>
                          <tr>
                            <th>Fecha</th>
                           
                            <th>Code item</th>
                            <th>Name item</th>
                            <th>Description item</th>
                            <th>Quantity product</th>
                            <th>Price purchase total</th>
                            <th>Price sale total</th>
                            <th>Variance</th>
                            <th>User</th>
                          
                          </tr>
                        </thead>

                        <tbody>
                          <% @inventory.inventory_items.each do |inventory_item| %>
                            <tr>
                              <td><%= inventory_item.created_at.strftime("%d/%m/%Y") %></td> 
                             
                              <td><%= inventory_item.code_item %></td>
                              <td><%= inventory_item.name_item %></td>
                              <td><%= inventory_item.description_item %></td>
                              <td><%= inventory_item.quantity_product %></td>
                              <td><%= inventory_item.price_purchase_total %></td>
                              <td><%= inventory_item.price_sale_total %></td>
                              <td><%= inventory_item.variance %></td>
                              <td><%= inventory_item.user_id %></td>
                              
                            </tr>
                          <% end %>
