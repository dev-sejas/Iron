<div class="panel panel-inf">
  <div class="panel-head">Inventarios</div>
    <div class="panel-wrapper collapse in" aria-expanded="true">
      <div class="panel-body table-responsive ">
        <%= render partial: 'layouts/partials/search_form', locals: { search_entity: 'inventories', word: "Inventario", url: new_inventory_path, view_list:'',view_kamback: '', ban: false} %>
