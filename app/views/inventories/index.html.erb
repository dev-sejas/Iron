                <%= render partial: 'results_search_camback' %>
           <% end %>

          <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
            <p>
              <%= button_to new_inventory_path, {method: :get, class: "btn btn-success"} do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Realizar Inventario
              <% end %>
            </p>
          </div>
    </div>  
  </div>
