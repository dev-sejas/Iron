


<div class="modal-body">

  <div class="panel-body">  
    <%= form_for :departamento, url: departamentos_url, method: :post, remote: true do |f| %>
    <div class="row">
    <div class="col-xs-12">
      <div id="div-error">
        
      </div>
      <div class="form-group">
        <%= f.label :name,  'Nombre Del Departamento', :class =>"control-label" %>
        <%= f.text_field :name, :class =>"form-control", :placeholder =>"Cochabamba" %>
      </div>      

      <div class="form-group">
         <%= f.label :code, 'codigo', :class =>"control-label" %>       
        <%= f.text_field :code, :class =>"form-control", :placeholder =>"CBBA" %>     
      </div>
    

    </div>
  </div>

    <%= f.submit "Aceptar", :id => 'new_departamento_id',  class: "btn btn-success" %>
   <% end %>
  </div>

</div>
<div class="modal-footer">
      <%= link_to "Cancelar", "#", class: "btn btn-danger", "data-dismiss": "modal" %>
    </div>

