
<div class="row">
    <% @myclients.each do |client| %>   
       <%= link_to new_sale_path(client: client), {method: :get, class: ""} do %>
        <div class="col-md-4 ">
            <div class="card">
              <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">                       
                       <%= image_tag(client.photo.midium.url, :alt => "client-img", class: "rounded-circle img-fluid") %>
                    </div>
                    <div class="col-md-8">
                        <h3 class="box-title m-b-0"><%= client.name %></h3> <small>Direcci√≥n</small>
                        <address>
                             <%= client.address.get_direccion_all %>
                            <br>
                            <br>
                            <abbr title="Credito Disponible"><%= @mycompany.get_current_currency.symbol%></abbr> <%= client.line_credit_available %>
                        </address>
                    </div>
                </div>
             </div>
            </div>
        </div>
       <% end%>
    <% end %>
</div>
    

