

<div class="row">
   <div class = "col-lg-12 col-md-12 col-sm-12" >
     <div class="col-lg-2 col-md-2 col-sm-2">
        <div class="product-img "> 
          <%= image_tag(@client.photo.large.url, :alt => "imge-item", class: "image-form") %>
             
        </div>
      </div>
       <div class="col-lg-4 col-md-4 col-sm-4">
              <div class="form-group">                 
                  <div class="input-group">
                  	<h2 class="m-b-0 m-t-0 m-t-40"><%= @client.name%></h2>
                    <h4 class="text-muted db"> <i class="fas fa-map-marker-alt"></i> <%= @client.address.get_direccion_all %></h4>
                    <h6 class="text-muted db"> <i class="fas fa-envelope"></i> <%= @client.email %></h6>                   
                  </div>            

              </div>
        </div>
           <div class="col-lg-6 col-md-4 col-sm-6">
              <a class="btn btn-app">
                <span class="badge bg-yellow">50</span>
                <i class=" fa fa-building"></i> Stock
              </a>
              <a class="btn btn-app">
                <span class="badge bg-green">300</span>
                <i class="fa fa-barcode"></i> Products
              </a>
              <a class="btn btn-app">
                <span class="badge bg-purple">891</span>
                <i class="fa fa-users"></i> Users
              </a>
              <a class="btn btn-app">
                <span class="badge bg-teal">67</span>
                <i class="fa fa-inbox"></i> Orders
              </a>
              <a class="btn btn-app">
                <span class="badge bg-aqua">12</span>
                <i class="fa fa-envelope"></i> Inbox
              </a>
              <a class="btn btn-app">
                <span class="badge bg-red">531</span>
                <i class="fa fa-thumbs-up"></i> Likes
              </a>
           </div>
   </div>
</div>
<hr>

<div class="row">
  <div class="col-md-12">
        

        <div class="col-md-6">
          <div class="form-group">
          	<label class="control-label">Telefono:</label>
            <span class=""><%= @client.phone%></span>            

            </div>
          </div>
                                                <!--/span-->
          <div class="col-md-6">
            <div class="form-group">
	            <label class="control-label">Celular:</label>
	            <span class=""><%= @client.mobile%></span>         
                </div>
           </div>

                                                      <!--/span-->
          <div class="col-md-6">
              <div class="form-group">
              		<label class="control-label">Sitio web:</label>
            		<span class=""><%= @client.web_site%></span> 
              </div>
           </div>

        <div class="col-md-6">
          <div class="form-group">
          	<label class="control-label">Descuento:</label>
            <span class=""><%= @client.discount%></span> 
          </div>
          </div>                                                <!--/span-->
          <div class="col-md-6">
              <div class="form-group">
              	<label class="control-label">Limite de Credito:</label>
            	<span class=""><%= @client.credit_limit%></span> 
                       
             </div>
           </div>
          <div class="col-md-6">
          <div class="form-group">
          		<label class="control-label">Lista de precios asignada:</label>
            	<span class=""><%= @client.price_list.name%></span>                
                   
          </div>
        </div>

   </div>

</div>
