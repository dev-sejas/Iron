

  <tbody>
    <% @purchase_order.purchase_order_lines.each do |purchase_order_line| %>
        <tr>
        <td><%= purchase_order_line.item.code %></td>
        <td><%= purchase_order_line.item.description %></td>
        <td><%= purchase_order_line.item_qty %></td>             
         <td><%= purchase_order_line.price_unit %></td>
         <% if purchase_order_line.state == 'borrador'%>
         <td><%= link_to purchase_order_line.state, purchase_order_purchase_order_line_path(purchase_order_line.purchase_order.id, purchase_order_line.id,  state: true), method: :delete,  remote: true %></td>
            <% else %>
            <td> 
                <span class="badge badge-pill badge-purple"> <%= purchase_order_line.state  %>  </span>
               </td>
         <% end %>
        <td><%= purchase_order_line.price_tax %></td>       
              
        <td><%= purchase_order_line.qty_received %></td>
        <td  class=""><%= purchase_order_line.subtotal %></td>
         <% if show_actions %>
         <td><%= link_to 'Recibir', new_reception_path(purchase_order_line_id: purchase_order_line.id), remote:true %></td>     
        <td><%= link_to 'Destroy', purchase_order_purchase_order_line_path(purchase_order_line.purchase_order.id, purchase_order_line.id), method: :delete,  remote: true %></td>
         <% end %>
      </tr>
      
   
    <% end %>
  </tbody>


