
<table class="table">
  <thead>
    <tr>
 <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %> 
    </tr>
    <tr>
     <th>Nombre Compañia</th>
     <th>Nombre Corto</th>
      <th>Nit</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Registro de compañia </th>
      <th>Pie de pagina</th>
      <th>¿Mi compañia?</th>
      <th>Ciudad</th>
      <th>F. Creacción</th>
      <th>F. Actualización</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.sigla%></td>
        <td><%= company.nit %></td>
        <td><%= company.email %></td>
        <td><%= company.phone %></td>
        <td><%= company.company_registration %></td>
        <td><%= company.report_footer%></td>
         <td><%= company.mycompany %></td>
         <td><%= company.country.name %></td>
        <td><%= company.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= company.updated_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to company, {method: :get, class: "btn btn-success"} do %>
            <span class=" fas fa-crosshairs" aria-hidden="true"> </span> 
          <% end %>
        </td>
        <td>
          <%= button_to edit_company_path(company), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> 
          <% end %>
        </td>
        <td>
          <%= button_to company, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
