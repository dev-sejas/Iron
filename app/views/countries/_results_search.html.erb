
<table class="table">
  <thead>
    <tr>
 <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %> 
    </tr>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th>Codigo Telefono</th>
      <th>Fecha de Modificación</th>
      <th>Fecha de Modificación</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.code %></td>
        <td><%= country.phone_code %></td>
        <td><%= country.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= country.updated_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to edit_country_path(country), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> 
          <% end %>
        </td>
        <td>
          <%= button_to country, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
