
<table class="table">
  <thead>
    <tr>
 <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %> 
    </tr>
    <tr>
     <th>Nombre</th>
      <th>Titulo</th>
      <th>Cargo o puesto</th>
      <th>email</th>
      <th>Movil </th>
      <th>Notas</th>
      <th>Cliente</th>
    
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.title %></td>
        <td><%= contact.job %></td>
        <td><%= contact.email %></td>
        <td><%= contact.mobile %></td>
        <td><%= contact.notes%></td>
         <td><%= contact.client.name %></td>
        <td><%= contact.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= contact.updated_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= button_to edit_contact_path(contact), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> 
          <% end %>
        </td>
        <td>
          <%= button_to contact, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
