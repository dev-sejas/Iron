

    <div class="modal-body">
      <% if @reception.purchase_order_line.state == 'confirmado' %>    
      <%= form_with(model: reception, method: :post, remote: false) do |f| %>

      <div class="row">
         <div class="col-xs-12"> 
           <div id="div-error"></div>
         </div>
          <div class="col-xs-6">         
            <div class="form-group">
                <%= f.label :qty_in, class: "sr-only" %>
                <div class="input-group">
                  <div class="input-group-addon"><label>Cantidad</label></div>
                <%= f.text_field :qty_in, placeholder: "", class: "form-control", value: 0 %>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div id="div-error"></div>
            <div class="form-group">
                <%= f.label :total, class: "sr-only" %>
                <div class="input-group">
                  <div class="input-group-addon"><label>Faltante</label></div>
                <%= f.text_field :total, placeholder: "", class: "form-control" %>
              </div>
            </div>
          </div>
           
          <div class="col-xs-12">
            <div class="form-group">
                <%= f.label :ob, class: "sr-only" %>
                 <div class="input-group">
                  <div class="input-group-addon"><i class=" fas fa-info"></i></div>
                  <%= f.text_area :ob, placeholder: ".", class: "form-control"%>
                  <%= f.hidden_field :purchase_order_line_id %>
              </div>

            </div>
          </div>  

        </div>
            <%= f.submit "Aceptar", class: "btn btn-primary t" %>
            <%= link_to "Cancelar", "#", class: "btn btn-danger", "data-dismiss": "modal" %>
 <% end %>
 <% else %>
 <h4>Lo sentimos no se puede recepcionar productos</h4>
 <% end %>
    </div>
   
 
