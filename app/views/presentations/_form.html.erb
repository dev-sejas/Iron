
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
    <%= form_with(model: presentation, local: true) do |form| %>
        <% if presentation.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(presentation.errors.count, "error") %> prohibited this presentation from being saved:</h2>

            <ul>
            <% presentation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
    <% end %>
        <div class="form-group">
          <%= form.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.text_field :qty, autofocus: true, placeholder: "Cantidad", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.collection_select :unit_id, @units, :id, :name,
              {selected: @presentation.unit_id, include_blank: 'Seleccione unidad'},
              {class: "form-control"} %>
              <span class="input-group-btn">
        </div>
        <div class="form-group">
          <%= form.collection_select :item_id, @items, :id, :name,
              {selected: @presentation.item_id, include_blank: 'Seleccione producto'},
              {class: "form-control"} %>
              <span class="input-group-btn">
        </div>
        <div class="product-img "> 
                 <%= image_tag(presentation.image_presentation.thumb.url, :alt => "imge-item", class: "image-form") %><br>
                     <div class="fileupload btn btn-info waves-effect waves-light"><span><i class="ion-upload m-r-5"></i>Subir una imagen </span>
                             <%= form.file_field :image_presentation, :class =>"upload"%>
                    </div>
           </div>

        <%= form.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
