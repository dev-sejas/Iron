<div class="modal-content">
  <div class="modal-header modal-header-primary">
     <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> [ × ] </button>
        <h2><i class="far fa-money-bill-alt"></i>   Nueva taza</h2>
  </div>
      <br>
        <div class="row">
        
        <div class="col-sm-4 col-lg-4">
          <div class="form-group row">
          <label class = "col-sm-3 text-left control-label col-form-label">Fecha:</label>
            <div class = "col-sm-9">
              <span class ="form-control"> <%=@currency_rate.name %></span>
            </div>
          </div>
        </div>
        <div class="col-sm-4 col-lg-4">
            <div class="form-group row">
              <label class = "col-sm-3 text-left control-label col-form-label">Moneda de referencia:</label>
              <div class="col-sm-9">
                <span class = "form-control"><%= @currency_rate.get_symbol%></span>
              </div>
            </div>
        </div>
        <div class="col-sm-3 col-lg-3">
            <div class="form-group row">
              <label class = "col-sm-3 text-left control-label col-form-label">Taza</label>
                 <div class="col-sm-9">
                  <span class="form-control">  <%= @currency_rate.rate %></span>
                  
                 </div>
             </div>
        </div>

    </div>


<div class="modal-footer">
      <%= link_to "Cancelar", "#", class: "btn btn-danger ", "data-dismiss": "modal" %>
      
    </div>

 

      
    
</div>


