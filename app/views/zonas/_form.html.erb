
<div class="modal-body">

  <div class="panel-body">  
    <%= form_for :zona, url: zonas_url, method: :post, remote: true do |f| %>
    <div class="row">
    <div class="col-xs-12">
      <div id="div-error"></div>
      <div class="form-group">
        <%= f.label :name,  'Nombre De La Zona', :class =>"control-label" %>
        <%= f.text_field :name, :class =>"form-control", :placeholder =>"Norte" %>
      </div>         

    </div>
  </div>

    <%= f.submit "Aceptar", :id => 'new_zona_id',  class: "btn btn-success" %>
   <% end %>
  </div>

</div>
<div class="modal-footer">
      <%= link_to "Cancelar", "#", class: "btn btn-danger", "data-dismiss": "modal" %>
    </div>

