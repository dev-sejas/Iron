<div class="white-box">
    <div class="table-responsive">
            <table class="table product-overview">
              <thead>
                <tr>
                  <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
                </tr>
                <tr>
                  <th>Código</th>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Imagen</th>
                  <th>Unidad</th>
                  <th>Stock</th>
                  <th>Stock Mínimo</th>
                  <th>Categoría</th>
                 <!--  <th>Almacen</th> -->
                  <th>Precio</th>
                  <th>Fecha de Alta</th>
                  <th>Fecha de Modificación</th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @items.each do |item| %>
                  <tr>
                    <td><%= item.code %></td>
                    <td><%= item.name  %></td>
                    <td><%= item.item_description %></td>
                    <td><%= image_tag(item.image.large.url, :alt => "imge-item", :width => "80") %>
                     </td>
                    <td><%= item.unit ? item.unit.name : '' %></td>
                    <td><%= item.stock %></td>
                    <td><%= item.min_stock %></td>
                    <td><%= item.category ? item.category.name : '' %></td>
                    
                    <td><%= number_to_currency(item.price) %></td>
                    <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                    <td><%= item.updated_at.strftime("%d/%m/%Y") %></td>
                    <td>
                      <%= button_to edit_item_path(item), {method: :get, class: "btn btn-info"} do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> 
                      <% end %>
                    </td>
                    <td>
                      <%= button_to item, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-warning" } do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
      </div>     
</div>
         